    <script>
        // قائمة القسائم الصالحة
        const validCoupons = ["COUPON1", "COUPON2", "COUPON3"]; // أضف القسائم هنا

        function validateCoupon() {
            const couponCode = document.getElementById('couponCode').value.trim();
            const messageElement = document.getElementById('responseMessage');

            if (validCoupons.includes(couponCode)) {
                // إزالة القسيمة من القائمة بعد الاستخدام
                const index = validCoupons.indexOf(couponCode);
                validCoupons.splice(index, 1);

                // عرض رسالة النجاح
                messageElement.innerHTML = "<span style='color: green;'>تم تفعيل الاشتراك بنجاح!</span>";

                // نقل المستخدم إلى صفحة المزايا
                setTimeout(() => {
                    window.location.href = "features.html"; // رابط صفحة المزايا
                }, 2000);
            } else {
                // رسالة الخطأ
                messageElement.innerHTML = "<span style='color: red;'>القسيمة غير صحيحة أو مُستخدمة.</span>";
            }
        }
    </script>

